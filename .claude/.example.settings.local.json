{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ./.claude/hooks/notify_slack.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ./.claude/hooks/notify_slack.sh"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ./.claude/hooks/notify_slack.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "ralph-wiggum@claude-code-plugins": false,
    "pyright@claude-code-lsps": true
  },
  "permissions": {
    "allow": [
      "Bash(npm run build:*)"
    ]
  }
}
